{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@react/*": ["packages/react/src/*"]
    }
  },
  "include": ["packages", "apps", "examples", "docs-site"]
}
