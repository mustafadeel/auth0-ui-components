{
  "name": "@auth0/universal-components-react",
  "version": "1.0.0-beta.5",
  "private": false,
  "sideEffects": [
    "*.css"
  ],
  "main": "./dist/spa.js",
  "module": "./dist/spa.mjs",
  "types": "./dist/spa.d.ts",
  "exports": {
    "./rwa": {
      "types": "./dist/rwa.d.ts",
      "import": "./dist/rwa.mjs",
      "require": "./dist/rwa.js"
    },
    "./spa": {
      "types": "./dist/spa.d.ts",
      "import": "./dist/spa.mjs",
      "require": "./dist/spa.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "type-check": "tsc --noEmit",
    "build:ts": "tsup",
    "build": "pnpm clean && pnpm type-check && pnpm build:ts && pnpm build:css",
    "dev": "tsup --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "registry:build": "shadcn build -o ../../docs-site/public/r"
  },
  "peerDependencies": {
    "react": "^16.11.0 || ^17 || ^18 || ^19.2.1",
    "react-dom": "^16.11.0 || ^17 || ^18 || ^19.2.1",
    "react-hook-form": "^7.0.0"
  },
  "dependencies": {
    "@auth0/universal-components-core": "workspace:*",
    "@hookform/resolvers": "^5.1.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-table": "^8.21.3",
    "@types/qrcode": "^1.5.5",
    "@uiw/color-convert": "^2.9.2",
    "@uiw/react-color": "^2.9.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "qrcode": "^1.5.4",
    "shadcn": "^3.5.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.25.56"
  },
  "author": "Auth0",
  "license": "MIT",
  "devDependencies": {
    "@auth0/auth0-react": "^2.0.0",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "postcss": "^8.5.6",
    "react-hook-form": "^7.57.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.1.10"
  }
}
