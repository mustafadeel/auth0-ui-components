{
  "name": "@auth0-web-ui-components/core",
  "version": "1.0.0",
  "description": "Core utilities for Auth0 Web UI components",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.esm.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf dist",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch"
  },
  "keywords": [
    "i18n",
    "auth0",
    "core",
    "utilities"
  ],
  "author": "Auth0",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@types/node": "^22.15.27"
  }
}
